  script(language="JavaScript" type="text/javascript" src="javascripts/googleStuff.js")
  script(language="JavaScript" type="text/javascript" src="javascripts/index-controller.js")
  script(async='', defer='', src='https://apis.google.com/js/api.js', onload='this.onload=function(){};handleClientLoad()', onreadystatechange="if (this.readyState === 'complete') this.onload()")
